---
import { languages } from '../i18n/ui';
import type { Lang } from '../i18n/ui';

interface Props {
  lang: Lang;
}

const { lang } = Astro.props;
---

<nav class="flex gap-0.5 bg-white/5 p-1 rounded-lg border border-white/10">
  {Object.entries(languages).map(([code, label]) => (
    <a
      href={`/${code}/`}
      class:list={[
        'px-3 py-1.5 text-xs font-medium no-underline rounded-md transition-all tracking-wider',
        code === lang
          ? 'text-neutral-900 bg-green-400 hover:bg-green-500'
          : 'text-neutral-400 hover:text-neutral-100 hover:bg-white/5'
      ]}
      aria-current={code === lang ? 'page' : undefined}
    >
      {code.toUpperCase()}
    </a>
  ))}
</nav>
