---
import { useTranslations } from '../i18n/utils';
import type { Lang } from '../i18n/ui';

interface Props {
  lang: Lang;
}

const { lang } = Astro.props;
const t = useTranslations(lang);

const features = [
  {
    icon: 'phoenixd',
    titleKey: 'features.phoenixd.title',
    descKey: 'features.phoenixd.description',
  },
  {
    icon: 'custody',
    titleKey: 'features.custody.title',
    descKey: 'features.custody.description',
  },
  {
    icon: 'instant',
    titleKey: 'features.instant.title',
    descKey: 'features.instant.description',
  },
  {
    icon: 'free',
    titleKey: 'features.free.title',
    descKey: 'features.free.description',
  },
  {
    icon: 'setup',
    titleKey: 'features.setup.title',
    descKey: 'features.setup.description',
  },
  {
    icon: 'opensource',
    titleKey: 'features.opensource.title',
    descKey: 'features.opensource.description',
  },
] as const;
---

<section id="features" class="py-20 md:py-28 px-4 md:px-8">
  <div class="max-w-6xl mx-auto">
    <!-- Header -->
    <div class="text-center mb-12 md:mb-16">
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-th mb-4">
        {t('features.header')}
      </h2>
      <p class="text-lg md:text-xl text-tsec max-w-2xl mx-auto">
        {t('features.subheader')}
      </p>
    </div>

    <!-- Features Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8">
      {features.map(({ icon, titleKey, descKey }) => (
        <div class="feature-card group relative h-full">
          <!-- Animated border gradient -->
          <div class="absolute inset-0 rounded-2xl bg-linear-to-r from-green-400/0 via-green-400/0 to-green-400/0 opacity-0 group-hover:opacity-100 group-hover:from-green-400/50 group-hover:via-emerald-400/50 group-hover:to-teal-400/50 transition-all duration-500 blur-sm"></div>

          <!-- Glow effect -->
          <div class="absolute inset-0 rounded-2xl bg-green-400/0 group-hover:bg-green-400/10 blur-xl transition-all duration-500"></div>

          <!-- Card content -->
          <div class="relative h-full p-6 md:p-8 bg-card-bg border border-b-subtle rounded-2xl group-hover:border-green-400/30 group-hover:bg-card-bg-hover transition-all duration-300">
            <div class="w-12 h-12 mb-5 flex items-center justify-center rounded-xl bg-green-400/10 text-green-400 group-hover:bg-green-400/20 group-hover:scale-110 transition-all duration-300">
              {icon === 'phoenixd' && (
                <svg class="w-6 h-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M13 2L3 14h9l-1 8 10-12h-9l1-8z"/>
                </svg>
              )}
              {icon === 'custody' && (
                <svg class="w-6 h-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <rect x="3" y="11" width="18" height="11" rx="2" ry="2"/>
                  <path d="M7 11V7a5 5 0 0 1 10 0v4"/>
                </svg>
              )}
              {icon === 'instant' && (
                <svg class="w-6 h-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <circle cx="12" cy="12" r="10"/>
                  <polyline points="12 6 12 12 16 14"/>
                </svg>
              )}
              {icon === 'free' && (
                <svg class="w-6 h-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <line x1="12" y1="1" x2="12" y2="23"/>
                  <path d="M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"/>
                </svg>
              )}
              {icon === 'setup' && (
                <svg class="w-6 h-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <polygon points="13 2 3 14 12 14 11 22 21 10 12 10 13 2"/>
                </svg>
              )}
              {icon === 'opensource' && (
                <svg class="w-6 h-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M12 2L2 7l10 5 10-5-10-5z"/>
                  <path d="M2 17l10 5 10-5"/>
                  <path d="M2 12l10 5 10-5"/>
                </svg>
              )}
            </div>
            <h3 class="text-lg md:text-xl font-semibold text-th mb-3 group-hover:text-green-400 transition-colors duration-300">
              {t(titleKey as any)}
            </h3>
            <p class="text-sm md:text-base text-tsec leading-relaxed group-hover:text-tb transition-colors duration-300">
              {t(descKey as any)}
            </p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .feature-card {
    transform: translateY(0);
    transition: transform 0.3s ease;
  }

  .feature-card:hover {
    transform: translateY(-4px);
  }
</style>
