---
import { useTranslations } from '../i18n/utils';
import type { Lang } from '../i18n/ui';

interface Props {
  lang: Lang;
}

const { lang } = Astro.props;
const t = useTranslations(lang);

const steps = [
  {
    number: 'how.step1.number',
    title: 'how.step1.title',
    description: 'how.step1.description',
    duration: 'how.step1.duration',
    video: '/videos/AmbrosiaPoS-InitialSetup.mp4',
  },
  {
    number: 'how.step2.number',
    title: 'how.step2.title',
    description: 'how.step2.description',
    duration: 'how.step2.duration',
    video: '/videos/AmbrosiaPoSProducts.mp4',
  },
  {
    number: 'how.step3.number',
    title: 'how.step3.title',
    description: 'how.step3.description',
    duration: 'how.step3.duration',
    video: '/videos/AmbrosiaPoSCart.mp4',
  },
] as const;
---

<section id="how-it-works" class="py-20 md:py-28 px-4 md:px-8">
  <div class="max-w-6xl mx-auto">
    <!-- Header -->
    <div class="text-center mb-10 md:mb-14">
      <h2 class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl font-bold text-neutral-100 mb-4 px-2">
        {t('how.header')}
      </h2>
      <p class="text-base md:text-lg lg:text-xl text-neutral-400 max-w-2xl mx-auto">
        {t('how.subheader')}
      </p>
    </div>

    <!-- Pro Tip -->
    <div class="mb-14 md:mb-20 max-w-3xl mx-auto">
      <div class="relative p-5 md:p-6 rounded-xl bg-green-400/5 border border-green-400/20">
        <div class="absolute -top-3 left-5 px-3 py-0.5 bg-neutral-950 border border-green-400/30 rounded-full">
          <span class="text-xs font-semibold text-green-400 tracking-wider uppercase">Pro Tip</span>
        </div>
        <div class="flex gap-3 items-start mt-1">
          <svg class="w-5 h-5 text-green-400 mt-0.5 shrink-0" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="12" cy="12" r="10"/>
            <line x1="12" y1="16" x2="12" y2="12"/>
            <line x1="12" y1="8" x2="12.01" y2="8"/>
          </svg>
          <p class="text-sm md:text-base text-neutral-300 leading-relaxed">
            <strong class="text-green-400">{t('how.protip')}</strong>{' '}
            {t('how.protip.text')}
          </p>
        </div>
      </div>
    </div>

    <!-- Steps -->
    <div class="flex flex-col gap-20 md:gap-28">
      {steps.map(({ number, title, description, duration, video }, idx) => (
        <div class:list={[
          "flex flex-col gap-8 md:gap-12 items-center",
          idx % 2 === 0 ? "lg:flex-row" : "lg:flex-row-reverse"
        ]}>
          <!-- Video -->
          <div class="w-full lg:w-1/2">
            <div class="relative group">
              <!-- Glow behind video -->
              <div class="absolute -inset-2 bg-green-400/10 rounded-2xl blur-xl opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>

              <div class="relative rounded-xl overflow-hidden border border-white/10 bg-neutral-900 group-hover:border-green-400/30 transition-colors duration-300">
                <video
                  class="w-full aspect-video object-cover"
                  muted
                  loop
                  playsinline
                  preload="metadata"
                >
                  <source src={video} type="video/mp4" />
                </video>

                <!-- Play overlay -->
                <button class="video-play-btn absolute inset-0 flex items-center justify-center bg-black/30 hover:bg-black/20 transition-colors cursor-pointer" aria-label="Play video">
                  <div class="w-14 h-14 md:w-16 md:h-16 flex items-center justify-center rounded-full bg-green-400/90 hover:bg-green-400 transition-all hover:scale-110">
                    <svg class="w-6 h-6 md:w-7 md:h-7 text-neutral-900 ml-1" viewBox="0 0 24 24" fill="currentColor">
                      <polygon points="5 3 19 12 5 21 5 3"/>
                    </svg>
                  </div>
                </button>
              </div>

              <!-- Duration tag -->
              <div class="absolute bottom-3 right-3 px-2.5 py-1 bg-black/70 backdrop-blur-sm rounded-md text-xs text-neutral-300 font-medium z-10">
                {t(duration as any)}
              </div>
            </div>
          </div>

          <!-- Text content -->
          <div class="w-full lg:w-1/2 flex flex-col gap-4">
            <div class="flex items-center gap-4">
              <span class="text-5xl md:text-6xl font-bold text-green-400/20 leading-none">
                {t(number as any)}
              </span>
              <div class="h-px flex-1 bg-gradient-to-r from-green-400/30 to-transparent"></div>
            </div>
            <h3 class="text-2xl md:text-3xl font-bold text-neutral-100">
              {t(title as any)}
            </h3>
            <p class="text-base md:text-lg text-neutral-400 leading-relaxed">
              {t(description as any)}
            </p>
          </div>
        </div>
      ))}
    </div>

    <!-- CTA -->
    <div class="text-center mt-16 md:mt-24">
      <a href="#download" class="inline-flex items-center gap-2 px-8 py-4 bg-gradient-to-br from-green-400 to-green-600 text-neutral-900 font-semibold text-base md:text-lg rounded-lg hover:-translate-y-0.5 transition-all shadow-[0_4px_14px_rgba(74,222,128,0.3)] hover:shadow-[0_6px_20px_rgba(74,222,128,0.4)]">
        <svg class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/>
          <polyline points="7 10 12 15 17 10"/>
          <line x1="12" y1="15" x2="12" y2="3"/>
        </svg>
        {t('how.cta')}
      </a>
    </div>
  </div>
</section>

<script>
  document.querySelectorAll('.video-play-btn').forEach((btn) => {
    btn.addEventListener('click', () => {
      const container = btn.closest('.relative');
      const video = container?.querySelector('video');
      if (!video) return;

      if (video.paused) {
        video.play();
        btn.classList.add('opacity-0', 'pointer-events-none');
        video.addEventListener('click', () => {
          video.pause();
          btn.classList.remove('opacity-0', 'pointer-events-none');
        }, { once: false });
      }
    });
  });

  // Pause videos when out of viewport
  const videos = document.querySelectorAll('#how-it-works video');
  const observer = new IntersectionObserver((entries) => {
    entries.forEach((entry) => {
      const video = entry.target as HTMLVideoElement;
      const btn = video.closest('.relative')?.querySelector('.video-play-btn');
      if (!entry.isIntersecting && !video.paused) {
        video.pause();
        btn?.classList.remove('opacity-0', 'pointer-events-none');
      }
    });
  }, { threshold: 0.2 });

  videos.forEach((video) => observer.observe(video));
</script>
