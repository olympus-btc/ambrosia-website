---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import LegalModals from '../components/LegalModals.astro';
import type { Lang } from '../i18n/ui';
import '../styles/global.css';

interface Props {
  lang?: Lang;
  title?: string;
  description?: string;
  ogImage?: string;
}

const {
  lang = 'en',
  title = 'Ambrosia',
  description = 'Open source point of sale for Bitcoin Lightning',
  ogImage,
} = Astro.props;

const defaultOgImage = lang === 'es' ? '/og-image-es.png' : '/og-image.png';
const canonicalURL = new URL(Astro.url.pathname, Astro.site ?? 'https://ambrosiapay.com');
const ogImageURL = new URL(ogImage ?? defaultOgImage, Astro.site ?? 'https://ambrosiapay.com').href;
---

<!doctype html>
<html lang={lang} class="bg-surface-base text-th">
	<head>
		<meta charset="UTF-8" />
		<script is:inline>
			(function(){
				try {
					var t = localStorage.getItem('theme');
					if (t === 'light') {
						document.documentElement.classList.add('light');
					}
				} catch(e){}
			})();
		</script>
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" href="/favicon.ico" />
		<link rel="canonical" href={canonicalURL} />
		<meta name="description" content={description} />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>

		<!-- Open Graph -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content={canonicalURL} />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content={ogImageURL} />
		<meta property="og:locale" content={lang === 'es' ? 'es_ES' : 'en_US'} />
		<meta property="og:site_name" content="Ambrosia PoS" />

		<!-- Twitter Card -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content={title} />
		<meta name="twitter:description" content={description} />
		<meta name="twitter:image" content={ogImageURL} />
		<meta name="twitter:site" content="@AmbrosiaPoS" />
	</head>
	<body class="min-h-screen font-sans antialiased">
		<Header lang={lang} />
		<main>
			<slot />
		</main>
		<Footer lang={lang} />
		<LegalModals lang={lang} />
	</body>
</html>
